@model UsuarioModel

@{
    Layout = "_LayoutExterno";
}

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
        <div class="card">
            <div class="card-body">
                <div class="app-brand justify-content-center">
                   
                </div>

                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-primary text-center">
                        @ViewBag.Mensaje
                    </div>
                }

                <form id="FormInicioSesion" class="mb-3" asp-action="Login" asp-controller="Home">
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" asp-for="CorreoElectronico" />
                    </div>
                    <div class="mb-3 form-password-toggle">
                        <label class="form-label" for="password">Contraseña</label>
                        <input type="password" class="form-control" asp-for="Contrasenna" />

                        <div class="d-flex justify-content-end">
                            <a asp-controller="Home" asp-action="RecuperarAcceso">
                                <small>Olvidó su contraseña?</small>
                            </a>
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary d-grid w-100" type="submit">Iniciar sesion</button>
                    </div>
                </form>

              
            </div>
        </div>
    </div>
</div>

<script src="~/js/InicioSesion.js" asp-append-version="true"></script>