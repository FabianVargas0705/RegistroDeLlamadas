@{
    Layout = "_LayoutExterno";
    ViewData["Title"] = "Cambiar contraseña";
}

<div class="p-4 p-md-5">

    <!-- Header -->
    <div class="text-center mb-4">
        <i class="bi bi-shield-lock fs-1 text-warning"></i>
        <h4 class="mt-3 fw-bold">Cambio obligatorio de contraseña</h4>
        <p class="text-muted mb-0">
            Por seguridad, debe establecer una nueva contraseña para continuar.
        </p>
    </div>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger text-center">
            @ViewBag.Mensaje
        </div>
    }

    <!-- Form -->
    <form asp-action="CambiarContrasena" method="post">

        <div class="mb-3">
            <label class="form-label">Nueva contraseña</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-key"></i>
                </span>
                <input type="password"
                       name="NuevaContrasena"
                       class="form-control"
                       placeholder="Ingrese su nueva contraseña"
                       required />
            </div>
        </div>

        <div class="mb-4">
            <label class="form-label">Confirmar contraseña</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-key-fill"></i>
                </span>
                <input type="password"
                       name="ConfirmarContrasena"
                       class="form-control"
                       placeholder="Repita la nueva contraseña"
                       required />
            </div>
        </div>

        <!-- Info -->
        <div class="alert alert-warning small">
            <i class="bi bi-exclamation-triangle"></i>
            Esta contraseña reemplazará la temporal enviada por correo.
        </div>

        <!-- Actions -->
        <div class="d-grid">
            <button type="submit" class="btn btn-warning btn-lg">
                <i class="bi bi-save"></i> Guardar nueva contraseña
            </button>
        </div>

    </form>
</div>