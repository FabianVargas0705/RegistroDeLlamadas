@inject RegistroLlamadas.UI.Servicios.PermisosServ.IPermisosUIService PermisosUI


<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RegistroLlamadas.UI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

  
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar Superior -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom sticky-top">
        <div class="container-fluid">
            <button class="btn btn-link text-decoration-none p-2 me-2" id="toggleSidebar" aria-label="Toggle sidebar">
                <i class="bi bi-list fs-4"></i>
            </button>

            <a class="navbar-brand fw-bold" href="/Home">
                <i class="bi bi-telephone-fill text-primary"></i> Mi Sistema
            </a>

            <div class="ms-auto d-flex align-items-center gap-2">
                <!-- Botón de tema -->
                <button class="btn btn-sm btn-outline-secondary rounded-pill" id="btnTheme" title="Cambiar tema">
                    <i class="bi bi-moon-stars-fill"></i>
                    <span class="d-none d-md-inline ms-1">Modo oscuro</span>
                </button>

                <!-- Usuario -->
                <div class="dropdown d-none d-md-block">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle rounded-pill" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i> Usuario
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Perfil</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear"></i> Configuración</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" asp-action="logout" asp-controller="Home"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <aside class="sidebar bg-body-tertiary border-end" id="sidebar">
        <div class="sidebar-content p-3">

            <div class="d-flex align-items-center justify-content-between mb-4 d-lg-none">
                <h5 class="mb-0 fw-bold">Menú</h5>
                <button class="btn btn-sm btn-close" id="closeSidebar" aria-label="Cerrar menú"></button>
            </div>

            <nav class="nav flex-column gap-1">

                <!-- Inicio -->
                @if (PermisosUI.PuedeVer("/Dashboard/DashboardView"))
                {
                <a href="/Dashboard/DashboardView" class="nav-link rounded d-flex align-items-center gap-2">
                    <i class="bi bi-house-door-fill"></i>
                    <span class="sidebar-text">Inicio</span>
                </a>
                }
                @if (PermisosUI.PuedeVerGrupo(new[] { "/Llamada/Llamadas", "/Llamada/MisLlamadas"}))
                {
                    <!-- Llamadas con submenú -->
                    <div class="nav-item">
                        <a href="#" class="nav-link rounded d-flex align-items-center gap-2 active"
                        data-bs-toggle="collapse" data-bs-target="#llamadasSubmenu" aria-expanded="true">
                            <i class="bi bi-telephone-fill"></i>
                            <span class="sidebar-text">Llamadas</span>
                            <i class="bi bi-chevron-down ms-auto sidebar-text"></i>
                        </a>

                        <div class="collapse show" id="llamadasSubmenu">
                            <nav class="nav flex-column ms-3 mt-1 gap-1">
                                <a href="/Llamada/Llamadas" class="nav-link rounded d-flex align-items-center gap-2">
                                    <i class="bi bi-list-ul"></i>
                                    <span class="sidebar-text">Todas las Llamadas</span>
                                </a>

                                <a href="/Llamada/MisLlamadas" class="nav-link rounded d-flex align-items-center gap-2">
                                    <i class="bi bi-person-check-fill"></i>
                                    <span class="sidebar-text">Mis Llamadas</span>
                                </a>
                            </nav>

                            <li><hr class="dropdown-divider"></li>
                        </div>
                    </div>
                }

                @if (PermisosUI.PuedeVerGrupo(new[] { "/Visita/TodasLasVisitas", "/Visita/MisVisitas" }))
                {
                    <div class="nav-item">
                        <a href="#" class="nav-link rounded d-flex align-items-center gap-2"
                        data-bs-toggle="collapse" data-bs-target="#visitasSubmenu" aria-expanded="false">
                            <i class="bi bi-geo-alt-fill"></i>
                            <span class="sidebar-text">Visitas</span>
                            <i class="bi bi-chevron-down ms-auto sidebar-text"></i>
                        </a>

                        <div class="collapse" id="visitasSubmenu">
                            <nav class="nav flex-column ms-3 mt-1 gap-1">

                                @if (PermisosUI.PuedeVer("/Visita/TodasLasVisitas"))
                                {
                                    <a href="/Visita/TodasLasVisitas" class="nav-link rounded d-flex align-items-center gap-2">
                                        <i class="bi bi-list-ul"></i>
                                        <span class="sidebar-text">Todas las Visitas</span>
                                    </a>
                                }
                                @if (PermisosUI.PuedeVer("/Visita/MisVisitas"))
                                {
                                    <a href="/Visita/MisVisitas" class="nav-link rounded d-flex align-items-center gap-2">
                                        <i class="bi bi-person-walking"></i>
                                        <span class="sidebar-text">Mis Visitas</span>
                                    </a>
                                }
                            </nav>

                            <li><hr class="dropdown-divider"></li>
                        </div>
                    </div>

                }
            
                <!--               SUBMENÚ DE CONFIGURACIÓN                -->
                @if (PermisosUI.PuedeVerGrupo(new[] { "/Rol/ConsultarRoles", "/Equipo/ConsultarEquipos", "/Centro/ConsultarCentros", "/Estado/ConsultarEstados" }))
                {
                    <div class="nav-item">
                        <a href="#" class="nav-link rounded d-flex align-items-center gap-2"
                        data-bs-toggle="collapse" data-bs-target="#configuracionSubmenu" aria-expanded="false">
                            <i class="bi bi-gear-fill"></i>
                            <span class="sidebar-text">Configuración</span>
                            <i class="bi bi-chevron-down ms-auto sidebar-text"></i>
                        </a>

                        <div class="collapse" id="configuracionSubmenu">
                            <nav class="nav flex-column ms-3 mt-1 gap-1">

                                @* <a href="/Usuario/Index" class="nav-link rounded d-flex align-items-center gap-2">
                                <i class="bi bi-people-fill"></i>
                                <span class="sidebar-text">Usuarios</span>
                            </a>
 *@
                                <a href="/Rol/ConsultarRoles" class="nav-link rounded d-flex align-items-center gap-2">
                                    <i class="bi bi-person-badge-fill"></i>
                                    <span class="sidebar-text">Roles</span>
                                </a>

                                <a href="/Equipo/ConsultarEquipos" class="nav-link rounded d-flex align-items-center gap-2">
                                    <i class="bi bi-pc-display"></i>
                                    <span class="sidebar-text">Equipos</span>
                                </a>

                                <a href="/Centro/ConsultarCentros" class="nav-link rounded d-flex align-items-center gap-2">
                                    <i class="bi bi-building-fill"></i>
                                    <span class="sidebar-text">Centros</span>
                                </a>

                                <a href="/Estado/ConsultarEstados" class="nav-link rounded d-flex align-items-center gap-2">
                                    <i class="bi bi-flag-fill"></i>
                                    <span class="sidebar-text">Estados</span>
                                </a>


                                <li><hr class="dropdown-divider"></li>

                       @*          <a href="/Configuracion/Otros" class="nav-link rounded d-flex align-items-center gap-2">
                                    <i class="bi bi-sliders"></i>
                                    <span class="sidebar-text">Más configuraciones</span>
                                </a> *@

                            </nav>
                        </div>
                    </div>
                }

            </nav>
        </div>
    </aside>
    <!-- Overlay para móvil -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Contenido Principal -->
    <main class="main-content">
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

