@model RegistroLlamadas.UI.Models.EstadoModel

@{
    ViewData["Title"] = "Agregar estado";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Agregar Nuevo Rol
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="AgregarEstados" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">
                                Nombre <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Descripcion" class="form-control" maxlength="50" required />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TipoEstado" class="form-label">TipoEstado</label>
                            <input asp-for="TipoEstado" type="number" class="form-control" />
                            <span asp-validation-for="TipoEstado" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Estado")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar Rol
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
