@model RegistroLlamadas.UI.Models.EquipoModel

@{
    ViewData["Title"] = "Agregar Equipo";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Agregar Nuevo Equipo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="AgregarEquipos" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label">
                                    Nombre <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Nombre" class="form-control" maxlength="50" required />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Modelo" class="form-label">
                                    Modelo <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Modelo" class="form-control" maxlength="50" required />
                                <span asp-validation-for="Modelo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Marca" class="form-label">
                                    Marca <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Marca" class="form-control" maxlength="50" required />
                                <span asp-validation-for="Marca" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Condicion" class="form-label">
                                    Condición <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Condicion" class="form-control" maxlength="50" required />
                                <span asp-validation-for="Condicion" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Serie" class="form-label">Serie</label>
                                <input asp-for="Serie" class="form-control" maxlength="100" />
                                <span asp-validation-for="Serie" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Activo" class="form-label">Activo</label>
                                <input asp-for="Activo" class="form-control" maxlength="20" />
                                <span asp-validation-for="Activo" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CentroId" class="form-label">Centro</label>
                                <select asp-for="CentroId" class="form-select select2">
                                    <option value="">Seleccione un centro</option>
                                    @if (ViewBag.Centros != null)
                                    {
                                        @foreach (var centro in ViewBag.Centros)
                                        {
                                            <option value="@centro.ID">@centro.Nombre</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CentroId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="EstadoId" class="form-label">Estado</label>
                                <select asp-for="EstadoId" class="form-select select2">
                                    <option value="">Seleccione un estado</option>
                                    @if (ViewBag.Estados != null)
                                    {
                                        @foreach (var estado in ViewBag.Estados)
                                        {
                                            <option value="@estado.ID">@estado.Nombre</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="EstadoId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Equipo")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar Equipo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                theme: 'bootstrap-5',
                language: 'es',
                width: '100%',
                allowClear: true
            });
        });
    </script>
}
